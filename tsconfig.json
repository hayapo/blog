{
  "extends": "astro/tsconfigs/strict",
  "include": ["styled-system", "src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
