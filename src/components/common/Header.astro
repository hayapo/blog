---
import { css } from "root/styled-system/css";
import { SITE_TITLE } from "@/consts";

interface Props {
  location?: string;
}

const { location } = Astro.props;

const headerStyle = css({
  height: "header",
  px: { base: "1rem", sm: "5rem" },
  display: "flex",
  alignItems: "center",
  justifyContent: "space-between",
  borderBottom: "1px solid",
  backgroundColor: {
    base: "hsla(0, 0%, 99%, 0.95)",
    _dark: "hsla(0, 0%, 14%, 0.95)",
  },
  borderColor: "borderAccent",
  backdropFilter: "blur 12px",
});
---

<header
  class={css({
    position: "sticky",
    top: 0,
    zIndex: 10,
  })}
>
  <nav class={headerStyle}>
		<div class={css({
			fontFamily: "code",
			fontSize: { base: "x-large", sm: "xx-large" },
			fontWeight: "bold",
		})}>
			<span class={css({display: "flex"})}>
				<a
					href="/blog"
					title="Back to home"
					aria-label="Back to home"
					class={css({
						_hover: {
							color: "accent",
						}
					})}
				>
					{SITE_TITLE}::blog
				</a>
			</span>
		</div>
  </nav>
</header>
