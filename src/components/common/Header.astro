---
import { css } from "root/styled-system/css";
import { SITE_TITLE } from "@/consts";

interface Props {
  location?: string;
}

const { location } = Astro.props;

const headerStyle = css({
  height: "header",
  px: { base: "1rem", sm: "10rem" },
  display: "flex",
  alignItems: "center",
  justifyContent: "space-between",
  borderBottom: "1px solid",
  backgroundColor: {
    base: "hsla(0, 0%, 99%, 0.95)",
    _dark: "hsla(0, 0%, 14%, 0.95)",
  },
  borderColor: "borderAccent",
  backdropFilter: "blur 12px",
});
---

<header
  class={css({
    position: "sticky",
    top: 0,
    zIndex: 10,
  })}
>
  <nav class={headerStyle}>
		<div class={css({
			fontFamily: "code",
			fontSize: { base: "x-large", sm: "xx-large" },
			fontWeight: "bold",
		})}>
			<span class={css({display: "flex"})}>
				<a
					href="/"
					title="Back to home"
					aria-label="Back to home"
					class={css({
						_hover: {
							color: "accent",
						}
					})}
				>
					{SITE_TITLE}
				</a>
				{location && `::${location}`}
			</span>
		</div>
		<div class={css({display: "flex", gap: "3rem"})}>
			<!-- <a
				href="/about"
				title="about"
				aria-label="link to about page"
				class={css({
					fontFamily: "code",
					fontSize: { base: "x-large", sm: "x-large" },
					fontWeight: "bold",
					_hover: {
						color: "accent",
					}
					})}
			>
				about
			</a> -->
			<a
				href="/blog"
				title="blog"
				aria-label="link to blog page"
				class={css({
					fontFamily: "code",
					fontSize: { base: "x-large", sm: "x-large" },
					fontWeight: "bold",
					_hover: {
						color: "accent",
					},
				})}
			>
				blog
			</a>
		</div>
  </nav>
</header>
