---
import { css } from "../../styled-system/css";
import ThemeSwitch from "./ThemeSwitchiButton/ThemeSwitch";
import { SITE_TITLE } from "../consts";

const headerStyle = css({
  height: "header",
  px: { base: "1rem", sm: "3rem" },
  display: "flex",
  alignItems: "center",
  justifyContent: "space-between",
  borderBottom: "1px solid",
  backgroundColor: {
    base: "hsla(0, 0%, 99%, 0.95)",
    _dark: "hsla(0, 0%, 14%, 0.95)",
  },
  borderColor: { base: "#A6A6A6", _dark: "#797979" },
  backdropFilter: "blur 12px",
});
---

<header
  class={css({
    position: "sticky",
    top: 0,
    zIndex: 10,
  })}
>
  <nav class={headerStyle}>
    <a
      href="/"
      title="Back to home"
      aria-label="Back to home"
      class={css({
        fontSize: "xx-large",
        fontWeight: "bold",
      })}
    >
      {SITE_TITLE}
    </a>
    <ThemeSwitch client:load />
  </nav>
</header>
