---
import "@/styles/index.css";
import Head from "../components/common/Head.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  location?: string;
}

const { title, description, image, location } = Astro.props;

const siteTitle = title ?? SITE_TITLE;
const siteDescription = description ?? SITE_DESCRIPTION;
const ogImage = new URL(image ?? "/ogp_title.webp", Astro.url.origin);
---

<!doctype html>
<html lang="ja">
  <Head title={siteTitle} description={siteDescription} image={ogImage} />
	<body>
		<Header location={location} />
		<slot />
		<Footer />
	</body>
</html>
